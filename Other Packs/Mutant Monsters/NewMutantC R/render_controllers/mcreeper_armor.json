{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.mcreeper_armor": {
      "geometry": "Geometry.charged",

      "materials": [ { "*": "Material.charged" } ],
      "textures": [ "Texture.charged" ],
      "overlay_color": {
          "r": 1.0,
          "g": 1.0,
          "b": 1.0,
          "a": 2.0
      },
      "part_visibility": [ { "*": "query.is_powered" } ],
      "uv_anim": {
        "offset": [
          "(query.is_powered ? (Math.cos(query.life_time * 14.92) * 3) : 0.0)",
          "(query.is_powered ? (Math.cos (query.life_time * 15.2) * 3) : 0.0)"
        ],
          "scale": [ 1.0, 1.0 ]
      },
      "light_color_multiplier": 0.5,
      "ignore_lighting": true
    }
  }
}


