{
	"format_version": "1.8.0",
	"render_controllers": {
    "controller.render.mcreeper": {
               "arrays": {

        "materials": {
          "Array.materials": [ "Material.default", "Material.exploding", "Material.ignite" ]
        },
        "geometries": {
          "Array.geos": [ "Geometry.default", "Geometry.exploding", "Geometry.ignite" ]
        },
				"textures": {
					"Array.skins": [
						"Texture.default",
						"Texture.exploding",
						"Texture.ignite"
					]
				}
			},
      "geometry": "Array.geos[query.variant]",
			"materials": [{
				"*": "Array.materials[query.variant]"
			}],
			"textures": ["Array.skins[query.variant]"],
      "overlay_color": {
          "r": "((variable.flash == 0.0) || (query.swelling_dir < 0.0)) ? this : 1.0",
          "g": "((variable.flash == 0.0) || (query.swelling_dir < 0.0)) ? this : 1.0",
          "b": "((variable.flash == 0.0) || (query.swelling_dir < 0.0)) ? this : 1.0",
          "a": "((variable.flash == 0.0) || (query.swelling_dir < 0.0)) ? this : 1.0"
      }
    }
  }
}
