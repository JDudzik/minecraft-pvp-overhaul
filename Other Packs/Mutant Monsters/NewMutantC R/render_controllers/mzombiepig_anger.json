{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.mzombiepig_anger": {
      "arrays": {
        "geometries": {
          "Array.geos": [ "Geometry.glint", "Geometry.glintbaby" ]
        }
      },
      "geometry": "Array.geos[query.is_baby]",

      "materials": [ { "*": "Material.glint" } ],
      "textures": [ "Texture.glint" ],

      "part_visibility": [ { "*": "query.is_powered" } ],
      "uv_anim": {
        "offset": [
          "(query.is_powered ? (Math.cos(query.life_time * 0) * 0) : 0.0)",
          "(query.is_powered ? (Math.cos (query.life_time * 0) * 0) : 0.0)"
        ],
          "scale": [ 1.0, 1.0 ]
      },
      "light_color_multiplier": 0.5,
      "ignore_lighting": true
    }
  }
}


