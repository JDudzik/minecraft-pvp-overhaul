    },
    "controller.animation.mwolf.shaking": {
      "states": {
        "default": {
          "transitions": [
            { "shaking": "query.is_shaking_wetness" }
          ]
        },
        "shaking": {
          "animations": [ { "mwolf_shaking": [] } ],
          "transitions": [
            { "default": "!query.is_shaking_wetness" }
          ]
        }
      }
    }
  }
}
