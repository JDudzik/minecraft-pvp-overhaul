{
  "format_version": "1.8.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "mutant:mutant_wolf",
      "textures": {
        "default": "textures/entity/mwolf/mwolf",
        "angry": "textures/entity/mwolf/mwolf_angry",
        "tame": "textures/entity/mwolf/mwolf_tame"
      },
      "materials": {
        "default": "cat"
      },
      "geometry": {
        "default": "geometry.mwolf"
      },
      "render_controllers": [
        "controller.render.mwolf"
      ],
      "spawn_egg": {
        "texture": "mutant_spawn_eggs",
       "texture_index": 8
      },
      
      "scripts": {
        "scale": "1.5",
        
        "pre_animation": [

          "variable.roar_length = 0.55;", 
          "variable.bite_anim_duration = 0.55f;", 
          "variable.bite_neck_length = 3.5;",
          "variable.body_shake_angle = 0.05 * query.frame_alpha + query.shake_angle;",
          "variable.body_roll_progress = Math.clamp((variable.body_shake_angle - 0.16) / 1.8, 0, 1);",
          "variable.body_rot_z = Math.sin(variable.body_roll_progress * 180) * Math.sin(variable.body_roll_progress * 1980) * 27;",
          "variable.upper_body_roll_progress = Math.clamp((variable.body_shake_angle - 0.08) / 1.8, 0, 1);",
          "variable.upper_body_rot_z = (Math.sin(variable.upper_body_roll_progress * 180) * Math.sin(variable.upper_body_roll_progress * 1980) * 27) - variable.body_rot_z;",
          "variable.tail_roll_progress = Math.clamp((variable.body_shake_angle - 0.2) / 1.8, 0, 1);",
          "variable.tail_rot_z = (Math.sin(variable.tail_roll_progress * 180) * Math.sin(variable.tail_roll_progress * 1980) * 27) - variable.body_rot_z;",
          "variable.head_roll_progress = Math.clamp(variable.body_shake_angle / 1.8, 0, 1);",
          "variable.head_rot_z = (Math.sin(variable.head_roll_progress * 180) * Math.sin(variable.head_roll_progress * 1980) * 27) - variable.body_rot_z;"
        ]
      },
      "animations": {
        "mwolf_setup": "animation.mwolf.setup",
        "mwolf_gravity": "animation.mwolf.gravity",

        "mwolf_baby_scaling": "animation.mwolf.baby_scaling",
        "mwolf_look_at": "animation.common.look_at_target",
        "mwolf_setup_anim": "animation.mwolf.setup_anim",
        "mwolf_angry": "animation.mwolf.angry",
        "mwolf_angry_anim_1": "animation.mwolf.angry_anim_1",
        "mwolf_angry_anim_3": "animation.mwolf.angry_anim_3",
        "mwolf_angry_anim_2": "animation.mwolf.angry_anim_2",
        "mwolf_sitting": "animation.mwolf.sit",
        "mwolf_sitting_anim_1": "animation.mwolf.sitting",
        "mwolf_sitting_anim_2": "animation.mwolf.standing",
        "mwolf_eating": "animation.mwolf.eating",

        "mwolf_leg_angry": "animation.mwolf.leg_angry",
        "mwolf_begging_anim_1": "animation.mwolf.anim_1",
        "mwolf_item": "animation.mwolf.item",
        "mwolf_begging_anim_2": "animation.mwolf.anim_2",
        "mwolf_begging": "animation.mwolf.begging",
        "mwolf_begging_anim": "animation.mwolf.begging_anim",
        "mwolf_biting": "animation.mwolf.bitting",
        "mwolf_leg_default": "animation.mwolf.leg_default"
      },
      "animation_controllers": [
        { "mwolf_setup": "controller.animation.mwolf.setup" },

        { "mwolf_attack": "controller.animation.mwolf.attack" },
        
        { "mwolf_leg_default": "controller.animation.mwolf.leg" },
        { "mwolf_item": "controller.animation.mwolf.item" },
        { "mwolf_biting": "controller.animation.mwolf.biting" },
        { "mwolf_leg_default": "controller.animation.mwolf.walk" },
        { "mwolf_eating": "controller.animation.mwolf.eating" },
        
        { "mwolf_nowalking": "controller.animation.mwolf.walk_sit" },
        
        { "mwolf_sitting": "controller.animation.mwolf.sitting_anim" },
        { "mwolf_angry_anim": "controller.animation.mwolf.angry_anim" },
        
        { "mwolf_begging": "controller.animation.mwolf.begging" },
        

        { "mwolf_look_at": "controller.animation.mwolf.look_at" },
        { "mwolf_baby_scaling": "controller.animation.mwolf.baby_scaling" }
      ]

    }
  }
}