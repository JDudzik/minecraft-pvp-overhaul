{
  "format_version": "1.8.0",
  "minecraft:entity": {
    "description": {
      "identifier": "boi:spider_queen_death",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "minecraft:cow_baby": {
        "minecraft:spawn_entity": {
          "min_wait_time": 0,
          "max_wait_time": 0,
          "spawn_sound": "plop",
          "spawn_entity": "boi:spider_queen_theme_end",
          "single_use": "true"
      },
        "minecraft:is_baby": {
        },
        "minecraft:scale_by_age": {
          "start_scale": 2.1,
          "end_scale": 1.0
        },
        "minecraft:ageable": {
          "duration": 8,
          "feedItems": "wheat",
          "grow_up": {
            "event": "minecraft:ageable_grow_up",
            "target": "self"
          }
        },

        "minecraft:behavior.follow_parent": {
          "priority": 6,
          "speed_multiplier": 1.1
        }
      },

      "boss_loot": {
        "minecraft:spawn_entity": {
          "min_wait_time": 0,
          "max_wait_time": 0,
          "spawn_sound": "plop",
          "spawn_entity": "boi:spider_queen_loot",
          "single_use": "true"
      },
        "minecraft:scale": {
          "value": 1.0
        },
      "minecraft:despawn": {
        }
      }
    },


    "components": {
      "minecraft:collision_box": {
        "width": 0.1,
        "height": 0.1
      },
      "minecraft:damage_sensor": [
        {
          "on_damage": {
          },
          "deals_damage": false
        }
      ],
      "minecraft:health": {
        "value": 10,
        "max": 10
      },
      "minecraft:movement": {
        "value": 0.001
      },
      "minecraft:physics": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 0,
            "add": {
              "component_groups": [
                "minecraft:cow_adult"
              ]
            }
          },
          {
            "weight": 1,
            "add": {
              "component_groups": [
                "minecraft:cow_baby"
              ]
            }
          }
        ]
      },

      "minecraft:entity_born": {
        "add": {
          "component_groups": [
            "minecraft:cow_baby"
          ]
        }
      },

      "minecraft:entity_transformed": {
        "remove": {
        },
        "add": {
          "component_groups": [
            "minecraft:cow_baby"
          ]
        }
      },

      "minecraft:ageable_grow_up": {
        "remove": {
          "component_groups": [
            "minecraft:cow_baby"
          ]
        },
        "add": {
          "component_groups": [
            "boss_loot"
          ]
        }
      },

      "minecraft:on_leash": {
        "add": {
          "component_groups": [
            "minecraft:cow_leashed"
          ]
        }
      },
      "minecraft:on_unleash": {
        "remove": {
          "component_groups": [
            "minecraft:cow_leashed"
          ]
        }
      }
    }
  }
}



