{
  "format_version": "1.8.0",
  "minecraft:entity": {
    "description": {
      "identifier": "boi:spider_baby_egg",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:spider"
    },

    "component_groups": {
      "boss": {
      "minecraft:movement": {
        "value": 0.18
      },
        "minecraft:transformation": {
          "into": "boi:spider_queen_spawn"
        }
      }
    },


    "components": {
        "minecraft:loot": {
          "table": "loot_tables/entities/spider_baby.json"
        },
      "minecraft:interact": [
        {
          "on_interact": {
            "filters": {
                "all_of": [
				  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "boi:queen_spawn"},
                  { "test" :  "is_family", "subject" : "other", "value" :  "player"},
                  { "test" :  "has_ability","subject" : "other", "value" :  "instabuild"}
                ]
            },
            "event": "boss"
          },
          "use_item": true
        }
      ],
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0
      },
      "minecraft:nameable": {
      },

      "minecraft:type_family": {
        "family": [ "spider_baby", "spider", "arthropod", "monster" ]
      },
      "minecraft:collision_box": {
        "width": 1.3,
        "height": 1.3
      },
      "minecraft:scale": {
        "value": 0.4
      },
      "minecraft:movement": {
        "value": {
          "range_min": 0.3,
          "range_max": 0.38
        }
      },
      "minecraft:navigation.climb": {
        "can_path_over_water": true
      },
      "minecraft:movement.basic": {
        
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
		  "minecraft:health": {
        "value": 4,
        "max": 4
      },
      "minecraft:attack": {
        "damage": 2
      },

      "minecraft:fall_damage": {
        "value": 0.0
      },
      "minecraft:behavior.float": {
        "priority": 0
      },

      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1,
        "track_target": true
      },
        "minecraft:behavior.leap_at_target": {
          "priority": 4,
          "yd": 0.4,
          "must_be_on_ground": false
        },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 5,
        "within_radius": 16,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "snowgolem"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "irongolem"
                  }
              ]
            },
            "max_dist": 26
          }
        ],
        "must_see": false
      },
      "minecraft:behavior.random_stroll": {
        "priority": 6,
        "speed_multiplier": 1
      },
	    "minecraft:physics": {
      }
    },
    "events": {
      "boss": {
        "add": {
          "component_groups": [
            "boss"
          ]
        }
      },
      "minecraft:become_calm": {
        "remove": {
          "component_groups": [
            "minecraft:scared"
          ]
        }
      }
    }
  }
}
