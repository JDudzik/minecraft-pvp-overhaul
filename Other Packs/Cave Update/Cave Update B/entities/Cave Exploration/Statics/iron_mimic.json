{
	"format_version": "1.13.0",
	"minecraft:entity": {
		"description": {
			"identifier": "boi:iron_mimic",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"components": {
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? query.variant : 0"
			},
			"minecraft:attack": {
				"damage": 3
			},
			"minecraft:type_family": {
				"family": [
					"slime",
					"monster",
					"mob"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:navigation.walk": {
				"can_path_over_water": true,
				"avoid_water": true
			},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:on_target_acquired": {
				"event": "minecraft:become_aggressive",
				"target": "self"
			},
			"minecraft:on_target_escape": {
				"event": "minecraft:become_calm",
				"target": "self"
			},
			"minecraft:nameable": {},
			"minecraft:behavior.slime_float": {
				"priority": 1
			},
			"minecraft:behavior.slime_random_direction": {
				"priority": 4
			},
			"minecraft:behavior.slime_keep_on_jumping": {
				"priority": 5
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "snowgolem"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "irongolem"
								}
							]
						},
						"max_dist": 32
					}
				],
				"must_see": true
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": true
			},
			"minecraft:target_nearby_sensor": {
				"inside_range": 2.75,
				"outside_range": 3,
				"on_inside_range": {
					"event": "attack"
				},
				"on_outside_range": {
					"event": "chase"
				}
			},
			"minecraft:behavior.slime_attack": {
				"priority": 3
			},
			"minecraft:knockback_resistance": {
				"value": 0.5
			},
			"minecraft:health": {
				"value": 30,
				"max": 30
			},
			"minecraft:movement": {
				"value": 0.8
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/vase.json"
			}
		},
		"events": {
			"chase": {
				"add": {
					"component_groups": [
						"chase"
					]
				},
				"remove": {
					"component_groups": [
						"attack"
					]
				}
			},
			"attack": {
				"add": {
					"component_groups": [
						"attack"
					]
				},
				"remove": {
					"component_groups": [
						"chase"
					]
				}
			}
		},
		"component_groups": {
			"chase": {
				"minecraft:behavior.slime_attack": {
					"priority": 3,
					"speed_multiplier": 1.5
				},
				"minecraft:knockback_resistance": {
					"value": 0.9
				},
				"minecraft:friction_modifier": {
					"value": 0.9
				},
				"minecraft:movement.jump": {
					"jump_delay": [
						0.2,
						0.2
					],
					"max_turn": 360
				}
			},
			"attack": {
				"minecraft:behavior.melee_attack": {
					"priority": 1,
					"melee_fov": 360,
					"reach_multiplier": 5,
					"max_dist": 3,
					"speed_multiplier": 0.6
				},
				"minecraft:knockback_resistance": {
					"value": 0.5
				},
				"minecraft:friction_modifier": {
					"value": 0.7
				},
				"minecraft:movement.basic": {
					"max_turn": 360
				},
				"minecraft:behavior.leap_at_target": {
					"priority": 1,
					"must_be_on_ground": false,
					"yd": 0.1
				}
			}
		}
	}
}