				"width": 0.3,
				"height": 0.6
			},
			"minecraft:knockback_resistance": {
				"value": 1
			},
			"minecraft:health": {
				"max": 1,
				"value": 1
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					},
					{
						"on_damage": {
